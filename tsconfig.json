{
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "moduleResolution": "nodenext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
  }
}